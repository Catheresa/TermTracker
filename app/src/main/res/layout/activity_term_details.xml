<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueGrotto"
    tools:context=".UI.TermDetails">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/termCourseList"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addTermDetailsBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@drawable/baseline_library_add_24"
        android:contentDescription="@string/Add"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/deleteTermDetailsBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="25dp"
        android:clickable="true"
        app:srcCompat="@drawable/baseline_restore_from_trash_24"
        android:contentDescription="@string/Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/addTermDetailsBTN"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/updateTermDetailsBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="@string/Update"
        app:srcCompat="@drawable/baseline_refresh_24"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintLeft_toRightOf="@+id/deleteTermDetailsBTN"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/termTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/babyBlue"
        android:text="@string/Term_Name"
        android:layout_marginTop="50dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@id/termCourseList"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/termStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/babyBlue"
        android:text="@string/Start_Date"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@id/termTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/termEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/babyBlue"
        android:text="@string/End_Date"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toBottomOf="@id/termStartDate"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <EditText
        android:id="@+id/termTitleInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="@string/NameHelpText"
        android:inputType="text"
        android:layout_marginTop="35dp"
        android:layout_marginStart="85dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/termCourseList"
        />

    <EditText
        android:id="@+id/termStartDateInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="@string/DateHelpText"
        android:inputType="date"
        android:layout_marginStart="85dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/termTitleInput"
        />

    <EditText
        android:id="@+id/termEndDateInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="@string/DateHelpText"
        android:inputType="date"
        android:layout_marginStart="85dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/termStartDateInput"
        />


</androidx.constraintlayout.widget.ConstraintLayout>